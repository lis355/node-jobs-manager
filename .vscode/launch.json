    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "main",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/main.js",
            "cwd": "${workspaceFolder}/",
            "args": [
                "--workspace=workspace.js",
                "--daemon=false"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "cli",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/cli/index.js",
            "cwd": "${workspaceFolder}/",
            "args": [
                "cmd"
            ]
        }
    ]
}